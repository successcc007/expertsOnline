.user_info {
  width: 100%;
  height: 100rpx;
  border-bottom: 2rpx solid #dfdfdf;
  margin-left: 5%;
  line-height: 100rpx;
  display: flex;
  flex-direction: row;
  position: relative;
}

.user_image {
  height: 140rpx;
  line-height: 140rpx;
}

.user_image image {
  width: 110rpx;
  height: 110rpx;
  margin-left: 50%;
  margin-top: 20rpx;
}

.lable, .textbtn {
  font-size: 30rpx;
  color: #666;
}
.lable{
  width: 20%;
}
.textbtn {
  margin-left: 20%;
  width: 43%;
  text-align: right;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  display:block;

}

.user_info .icon {
  font-size: 40rpx;
  color: #ccc;
  position: absolute;
  top: 0rpx;
  right: 8%;
}
