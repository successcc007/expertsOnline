<!--pages/book/book.wxml-->
<view class="container">
  <scroll-view scroll-y="true" class="page-body" bindscrolltolower="loadMore">
    <view class='message'>
      <text>留言内容</text>
      <textarea bindblur="bindTextAreaBlur" maxlength="-1" placeholder="请输入你的留言内容" placeholder-style="font-size:15px" />
    </view>
    <view class='name'>
      <text>你的姓名</text>
      <input placeholder="请输入你的姓名" placeholder-style="font-size:15px" auto-focus/>
    </view>
    <view class='btn'>
      <button booktap="submit">提交</button>
    </view>
  </scroll-view>
</view>
